<div class="fondoProductoMain">
    <!--NavBar-->
<nav class="navbar navbar-expand-lg navbar-light" id="barra">
        <div class="container-fluid ">
            <a class="navbar-brand " href="/"><img src="/img/IKEA-Logo-1.png " alt=" " width="150px "></a>
            
            <button class="navbar-toggler " type="button " data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false " aria-label="Toggle navigation ">
                <span class="navbar-toggler-icon "></span>
              </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="textNavBar">
                    <li>
                        {{#if mensajito}}
                    {{>Popup headline= mensajito }}
                    {{/if}}
                    </li>
                </ul>
                <div class="me-5 mt-1">
                    <a href="/links/carrito"><button class="botonImagen"></button></a>
                </div>
            </div>
        </div>
    </nav>
    {{!-- CONTENIDO DE LA PAGINA --}}
    <div class="container-fluid" id="fondoSubcategoria">
        <div class="container">
            <div class="row">
                <div class="col" id="tablaFondoProdunto">
                    {{!-- CAROUSEL --}}
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img id="tamañoImagen" src={{str}} class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                        <img id="tamañoImagen" src={{str2}} class="d-block w-100">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev" id="botonesCarousel">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next" id="botonesCarousel">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    </div>
                    {{!-- CAROUSEL --}}
                </div>
                <div class="col-4" id="fichaTecnica">
                {{#each Query}}
                  <form action = "/links/comprando/{{id_producto}}" method="GET">
                    <div class="row">
                        <div class="row">
                            <h1 id="nombrePlantilla" name = "nombre">{{nombre}}</h1>
                            {{!-- <textarea name="nombre" id="nombrePlantilla" disabled>{{nombre}}</textarea> --}}
                        </div>
                        <div class="row">
                            <textarea name="" id="diseñadorPlantilla" disabled>{{diseñador}}</textarea>
                        </div>
                        <div class="row">
                            <textarea name="precio" id="precioPlantilla" disabled>{{Precio}}$</textarea>
                        </div>
                    </div>
                  
                         <div class="input-group mb-3" id="cantidadGrupo">
                            <span class="input-group-text" id="cantidadPlantillaProducto">Cantidad</span>
                            <input class="form-control" type="number" placeholder="Cantidad" value="1" name = "Cantidad">
                        </div>
                        <div class="row" id="rowComprarProducto">
                            <button type="submit" class="btn btn-primary" id="comprarProducto">Añadir al Carrito</button>
                        </div>
                    </form>
                </div>
            
            </div>
            <div class="row">
                <div class="col-8" id="caracteristicasPlantilla">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item" id="accordionItemCaracteristicas">
                            <h2 class="accordion-header" id="headingOne">
                            <button id="textAcordionCaracteristicas" class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Caracteristicas
                            </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                {{Caracteristicas}}
                            </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                            <button id="textAcordionInstrucciones" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Intrucciones de uso
                            </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                {{Instrucciones}}
                            </div>
                            </div>
                        </div>
                        <div class="accordion-item" id="accordionItemMateriales">
                            <h2 class="accordion-header" id="headingThree">
                            <button id="textAcordionMateriales" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Materiales
                            </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                             {{Materiales}}
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
    </div>






<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</div>