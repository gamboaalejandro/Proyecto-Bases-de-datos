<div>
    <div class="container-fluid" id="fondoContainer">
        <div class="row">
            <div class="col-3" id="col1">
                <div class="form-floating mb-3 mt-2">
                    <form action="/links/Producto" method="GET">
                        <input type="number" class="form-control" id="floatingInput" placeholder="Buscar Producto" name="Producto">
                        <div id="divBuscarBoton">
                            <button class="btn btn-primary" type="submit" id="buscarBoton1">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col" id="col2">
                <!-- QUERY PARA MOSTRAR LOS DATOS QUE VIENEN DE LA BASE DE DATOS EN LOS INPUTS -->
                <form action="/links/Producto" method="POST">
                    <div class="mt-2">
                        <input name="id_producto" type="text" class="form-control" placeholder="Id de Producto" aria-label="First name" id="idProducto" maxlength="50" >
                    </div>
                    <div class="mt-2">
                        <input name="Nombre" type="text" class="form-control" placeholder="Nombre" aria-label="First name" id="nombreProducto" maxlength="100" >
                    </div>
                    <div class="mt-2" id="divPrecioProducto">
                        <input name="Precio" type="text" class="form-control" placeholder="Precio" aria-label="Precio" id="precioProducto" maxlength="10">
                    </div>
                    <div class="mt-2" id="divIdCategoriaProducto">
                        <input name="CategoriaID" type="text" class="form-control" placeholder="Id de Categoria" aria-label="First name" id="idCategoriaProducto" maxlength="10">
                    </div>
                    <div class="mt-2">
                        <span class="input-group-text">Caracteristicas</span>
                        <textarea rows= "9" name= "Caracteristicas" class="form-control" aria-label="Withtextarea" placeholder="Caracteristica" disabled=true> {{Caracteristicas}} </textarea>
                    </div>
                    <div class="mt-2">
                        <textarea rows="5" name= "Instrucciones" class="form-control" aria-label="Withtextarea" placeholder="Instrucciones" disabled=true> {{Instrucciones}} </textarea>
                    </div>
                    <div class="mt-3 mb-3" id="montajeProducto">
                        <input name="Montaje" class="form-check-input" type="checkbox" id="gridCheck" value="{{Montaje}}" disabled=true>
                        <label class="form-check-label" for="gridCheck">Montaje</label>
                    </div>

                    {{!-- BOTONES CUANDO YA HE BUSCADO EN LA BASE DE DATOS Y DESEO MODIFICAR ELIMINAR, ANADIR O GUARDAR CAMBIOS --}}
                        </div>
            <div class="col-1" id="col3">
                <div class="col">
                    <div class="mt-2" id="divAñadirBoton">
                        <button type="submit" class="btn btn-success" >Añadir</button>
                    </div>
                </div>
            </div>
            <div class="col-1" id="col4">
                <div class="mt-2" id="divBorrarBoton">
                    <button type="submit" class="btn btn-danger" >Borrar</button>
                </div> 
            </div>
            <div class="col-1" id="col5">
                <div class="mt-2" id="divModificarBoton">
                    <button type="submit" class="btn btn-warning" >Modificar</button>
                </div>
            </div>
            <div class="col-auto" id="col6">
                <div class="mt-2" id="divGuardarBoton">
                    <button type="submit" class="btn btn-primary" >Guardar</button>
                </div>
            </div>
        </div>

                    {{!-- FIN DEL BLOQUE DE BOTONES HABILITADOS PARA ELIMINAR ANADIR O GUARDAR O MODIFICAR --}}
                    <!-- ELSE CUANDO EN LA PRIMERA INSTANCIA EL QUERY ES VACIO -->
                    {{else}}

                    <div class="mt-2">
                        <input name="id_producto" type="text" class="form-control" placeholder="Id de Producto" aria-label="First name" id="idProducto" maxlength="50" disabled=true>
                    </div>
                    <div class="mt-2">
                        <input name="nombre" type="text" class="form-control" placeholder="Nombre" aria-label="First name" id="nombreProducto" maxlength="100" disabled=true>
                    </div>
                    <div class="mt-2" id="divPrecioProducto">
                        <input name="precio" type="text" class="form-control" placeholder="Precio" aria-label="Precio" id="precioProducto" maxlength="10" disabled=true>
                    </div>
                    <div class="mt-2" id="divIdCategoriaProducto">
                        <input name="id_categoria" type="text" class="form-control" placeholder="Id de Categoria" aria-label="First name" id="idCategoriaProducto" maxlength="10" disabled=true>
                    </div>
                    <div class="mt-2">
                        <input name="caracteristicas" type="text" class="form-control" placeholder="Caracteristicas" aria-label="First name" id="caracteristicasProducto" maxlength="500" disabled=true>
                    </div>
                    <div class="mt-2">
                        <input name="instrucciones" type="text" class="form-control" placeholder="Instrucciones de
                            uso" aria-label="First name" id="intruccionesProducto" maxlength="500" disabled=true>
                    </div>
                    <div class="mt-3 mb-3" id="montajeProducto">
                        <input name="check" class="form-check-input" type="checkbox" id="gridCheck" disabled=true>
                        <label class="form-check-label" for="gridCheck">Montaje</label>
                    </div>
                    {{!-- BOTONES CUANDO AUN NO HE BUSCADO NADA EN LA BASE DE DATOS --}}
            </div>
            <div class="col-1" id="col3">
                <div class="col">
                    <div class="mt-2" id="divAñadirBoton">
                        <button type="submit" class="btn btn-success" >Añadir</button>
                    </div>
                </div>
            </div>
            <div class="col-1" id="col4">
                <div class="mt-2" id="divBorrarBoton">
                    <button type="submit" class="btn btn-danger" disabled= true>Borrar</button>
                </div>
            </div>
            <div class="col-1" id="col5">
                <div class="mt-2" id="divModificarBoton">
                    <button type="submit" class="btn btn-warning" disabled= true>Modificar</button>
                </div>
            </div>
            <div class="col-auto" id="col6">
                <div class="mt-2" id="divGuardarBoton">
                    <button type="submit" class="btn btn-primary" disabled= true>Guardar</button>
                </div>
            </div>
        </div>
                    {{!-- FIN DEL BLOQUE ANTES DE BUSQUEDA --}}
                    {{/each}}

                </form>
          
    </div>
</div>
