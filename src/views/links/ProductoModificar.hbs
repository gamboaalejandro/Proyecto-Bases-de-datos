<div>
    <div class="container-fluid" id="fondoContainer">
        <div class="row">
            <div class="col-3" id="col1">
                <div class="form-floating mb-3 mt-2">
                    <form action="/links/Producto" method="GET">
                        <input type="number" class="form-control" id="floatingInput" placeholder="Buscar Producto" name="Producto">
                        <div id="divBuscarBoton">
                            <button class="btn btn-primary" type="submit" id="buscarBoton1">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col" id="col2">
                <!-- QUERY PARA MOSTRAR LOS DATOS QUE VIENEN DE LA BASE DE DATOS EN LOS INPUTS -->
                <form action="/links/modificar/{{Query.id_producto}}" method="POST">
                    <div class="mt-2">
                        <input name="id_producto" type="text" class="form-control" placeholder="Id de Producto" aria-label="First name" id="idProducto" maxlength="50" value="{{Query.id_producto}}" readonly> 
                    </div>
                    <div class="mt-2">
                        <input name="nombre" type="text" class="form-control" placeholder="Nombre" aria-label="First name" id="nombreProducto" maxlength="100" value="{{Query.nombre}}" >
                    </div>
                    <div class="mt-2" id="divPrecioProducto">
                        <input name="precio" type="text" class="form-control" placeholder="Precio" aria-label="Precio" id="precioProducto" maxlength="10" value="{{Query.Precio}}" >
                    </div>
                    <div class="mt-2" id="divIdCategoriaProducto">
                        <input name="categoriaid" type="text" class="form-control" placeholder="Id de Categoria" aria-label="First name" id="idCategoriaProducto" maxlength="10" value= "{{Query.Id_categoriaP}}" readonly >
                    </div>
                    <div class="mt-2" id="divCantidadProducto">
                        <input name="cantidad" type="text" class="form-control" placeholder="Cantidad" aria-label="First name" id="cantidadProducto" maxlength="100"  value= "{{Query.Cantidad}}"  >
                    </div>
                    <div class="mt-2" id="divMaterialesProducto">
                        <input name="materiales" type="text" class="form-control" placeholder="Materiales" aria-label="First name" id="materialesProducto" maxlength="100"  value= "{{Query.Materiales}}"  >
                    </div>
                    <div class="mt-2">
                        <textarea rows= "9" name= "caracteristicas" class="form-control" aria-label="Withtextarea" placeholder="Caracteristica"  id="textCaracteristicas"> {{Query.Caracteristicas}} </textarea>
                    </div>
                    <div class="mt-2">
                        <textarea rows="5" name= "instrucciones" class="form-control" aria-label="Withtextarea" placeholder="Instrucciones"  id="textInstrucciones"> {{Query.Instrucciones}} </textarea>
                    </div>
                    <div class="mt-3 mb-3" id="montajeProducto">
                        {{#if Query.Montaje}}
                        <select class="form-select" aria-label="Default select example" name="Montaje" >
                            <option>Montaje</option>
                            <option value="1" selected>Si</option>
                            <option value="0">No</option>
                        </select>
                        {{else}}
                        <select class="form-select" aria-label="Default select example" name="Montaje" >
                            <option>Montaje</option>
                            <option value="1">Si</option>
                            <option value="0" selected>No</option>
                        </select>

                        {{/if}}
                    </div>

                    {{!-- BOTONES CUANDO YA HE BUSCADO EN LA BASE DE DATOS Y DESEO MODIFICAR ELIMINAR, ANADIR O GUARDAR CAMBIOS --}}
                        </div>
       
            <div class="col-1" id="col3">
                <div class="col">
                    <div class="mt-2" id="divAñadirBoton">
                        <button type="submit" class="btn btn-success" id="btnAñadir" disabled = true>
                            <a href="/links/ProductoGuardar">Añadir</a>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-1" id="col4">
                <div class="mt-2" id="divBorrarBoton">
                    <button type="submit" class="btn btn-danger" id="btnBorrar" disabled = true >
                       Borrar
                    </button>
                </div> 
            </div>
            <div class="col-1" id="col5">
                <div class="mt-2" id="divModificarBoton">
                    <button type="submit" class="btn btn-warning" id="btnModificar" disabled = true>
                        <a href="/links/modificar/{{Query.id_producto}}">Modificar</a>
                        </button>
                </div>
            </div>
            <div class="col-auto" id="col6">
                <div class="mt-2" id="divGuardarBoton">
                    <button type="submit" class="btn btn-primary" id="btnGuardar">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
