                    </div>
                    <div class="mt-2 input-group mb-3">
                        <input name="Nombre" type="text" class="form-control" placeholder="Nombre" aria-label="First name" id="nombreProducto" maxlength="100">
                        <span class="input-group-text" id="basic-addon1">Nombre</span>
                    </div>
                    <div class="mt-2 input-group mb-3" id="divPrecioProducto">
                        <input name="Precio" type="text" class="form-control" placeholder="Precio" aria-label="Precio" id="precioProducto" maxlength="10" >
                        <span class="input-group-text" id="basic-addon1">Precio</span>
                    </div>
                    <div class="mt-2 input-group mb-3" id="divIdCategoriaProducto">
                        <input name="CategoriaID" type="text" class="form-control" placeholder="Id de Categoria" aria-label="First name" id="idCategoriaProducto" maxlength="10" >
                        <span class="input-group-text" id="basic-addon1">ID Categoria</span>
                    </div>
                     <div class="mt-2 input-group mb-3" id="divCantidadProducto">
                        <input name="cantidad" type="text" class="form-control" placeholder="Cantidad" aria-label="First name" id="cantidadProducto" maxlength="100" >
                        <span class="input-group-text" id="basic-addon1">Cantidad</span>
                    </div>
                    <div class="mt-2 input-group mb-3" id="divMaterialesProducto">
                        <input name="materiales" type="text" class="form-control" placeholder="Materiales" aria-label="First name" id="materialesProducto" maxlength="100">
                        <span class="input-group-text" id="basic-addon1">Materiales</span>
                    </div>
                    <div class="mt-2 input-group mb-3">
                        <textarea rows= "9" name= "Caracteristicas" class="form-control" aria-label="Withtextarea" placeholder="Caracteristica"  id="textCaracteristicas"></textarea>
                        <span class="input-group-text" id="basic-addon1">Caracteristicas</span>
                    </div>
                    <div class="mt-2 input-group mb-3">
                        <textarea rows="5" name= "Instrucciones" class="form-control" aria-label="Withtextarea" placeholder="Instrucciones"  id="textInstrucciones"></textarea>
                        <span class="input-group-text" id="basic-addon1">Instrucciones</span>
                    </div>
                    <div class="mt-3 mb-3" id="montajeProducto">
                        <select class="form-select" aria-label="Default select example" name="Montaje" >
                            <option selected>Montaje</option>
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
